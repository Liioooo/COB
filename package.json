{
  "name": "cob",
  "version": "0.0.0",
  "main": "electron/dist/main.js",
  "scripts": {
    "postinstall": "npm run postinstall:electron",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve serve-docs electron:serve",
    "build": "npm run postinstall:electron && npm run build-docs && npm run electron:serve-tsc && ng build --prod",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "build-docs": "webpack --config webpack.docs.config.js --mode=production",
    "serve-docs": "webpack --config webpack.docs.config.js --watch --mode=development",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p electron/tsconfig.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e",
    "electron:windows32": "npm run build:prod && electron-packager . COB --overwrite --asar --platform=win32 --arch=ia32 --icon=icons/icon256.ico --prune=true --out=release --version-string.ProductName='COB'",
    "electron:windows64": "npm run build:prod && electron-packager . COB --overwrite --asar --platform=win32 --arch=x64 --icon=icons/icon256.ico --prune=true --out=release --version-string.ProductName='COB'",
    "electron:linux": "npm run build:prod && electron-packager . COB --overwrite --asar --platform=linux --arch=x64 --icon=icons/icon256.ico --prune=true --out=release"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "~7.3.4",
    "@angular/material": "~7.3.7",
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "angular-animations": "0.0.9",
    "github-markdown-css": "^3.0.1",
    "hammerjs": "^2.0.8",
    "ngx-take-until-destroy": "^5.4.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/animations": "^7.2.15",
    "@angular/cli": "~7.3.9",
    "@angular/common": "~7.2.15",
    "@angular/compiler": "~7.2.15",
    "@angular/compiler-cli": "~7.2.15",
    "@angular/core": "~7.2.15",
    "@angular/forms": "~7.2.15",
    "@angular/language-service": "~7.2.15",
    "@angular/platform-browser": "~7.2.15",
    "@angular/platform-browser-dynamic": "~7.2.15",
    "@angular/router": "~7.2.15",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "core-js": "^2.5.4",
    "css-loader": "^2.1.1",
    "electron": "^4.0.7",
    "electron-packager": "^13.1.1",
    "electron-reload": "^1.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "markdown-loader": "^5.0.0",
    "ngx-electron": "^2.1.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~5.4.0",
    "rxjs": "~6.5.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-node": "~7.0.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "wait-on": "^3.2.0",
    "webpack-cli": "^3.3.0",
    "zone.js": "~0.8.26"
  }
}
