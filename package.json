{
  "name": "cob",
  "version": "0.0.0",
  "main": "electron/dist/main.js",
  "scripts": {
    "postinstall": "npm run postinstall:electron",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build --prod",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p electron/tsconfig.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e",
    "electron:windows32": "npm run build:prod && electron-packager . COB --overwrite --asar --platform=win32 --arch=ia32 --icon=icons/icon256.ico --prune=true --out=release --version-string.ProductName='COB'",
    "electron:windows64": "npm run build:prod && electron-packager . COB --overwrite --asar --platform=win32 --arch=x64 --icon=icons/icon256.ico --prune=true --out=release --version-string.ProductName='COB'",
    "electron:linux": "npm run build:prod && electron-packager . COB --overwrite --asar --platform=linux --arch=x64 --icon=icons/icon256.ico --prune=true --out=release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": ">=7.0.0",
    "@angular/cdk": "~7.3.4",
    "@angular/material": "~7.3.4",
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "hammerjs": "^2.0.8"
  },
  "devDependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26",
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.4",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/node": "~8.9.4",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "electron": "^4.0.7",
    "electron-packager": "^13.1.1",
    "electron-reload": "^1.4.0",
    "wait-on": "^3.2.0",
    "ngx-electron": "^2.1.1",
    "npm-run-all": "^4.1.5"
  }
}
